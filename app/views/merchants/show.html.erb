<div id="page-banner">
  <div id ="merchant-details">
    <%= @merchant.name %>
  </div>
  <div id="merchant-links">
    <%= link_to "Dashboard", merchant_path(@merchant.id), class: "dashboard-link"%>
    <%= link_to 'My Items', merchant_items_path(@merchant.id), class: "items-link" %>
    <%= link_to 'My Invoices', merchant_invoices_path(@merchant.id), class: "invoices-link" %>
    <%= link_to 'My Discounts', merchant_bulk_discounts_path(@merchant.id), class: "discounts-link" %>
  </div>
</div>

<div id="dashboard-content">
  <div id="dashboard-content-left">
    <div class="content-column-title">
      Items Ready to Ship
    </div>
    <div class="content-column-main">
      <div id="items-ready-to-ship">
        <% @merchant.items_ready_to_ship.each do |invoice_item| %>
          <div id="invoice-item-<%= invoice_item.id %>">
            <p class="item-ready-to-ship">
              <%= invoice_item.id %> - 
              <%= invoice_item.item.name %> - 
              <%= link_to "Invoice ##{invoice_item.invoice.id}", merchant_invoice_path(@merchant.id, invoice_item.invoice_id) %> - 
              <%= invoice_item.invoice.formatted_date %>  
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div id="dashboard-content-right">
    <div class="content-column-title">
      Favorite Customers
    </div>
    <div class="content-column-main">
      <div id="favorite-customers">
        <ol>
          <% @merchant.favorite_customers.each do |customer| %>
            <div id="customer-id-<%= customer.id %>">
              <li class="favorite-customer">
                <%= customer.first_name %> <%= customer.last_name %>, Successful Transactions: <%= customer.transaction_total %>
              </li>
            </div>
          <% end %>
        </ol>
      </div>
    </div>
  </div>
</div>